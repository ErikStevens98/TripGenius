class AIRecommender:
    def __init__(self):
        self.preferences = {}
        self.suggestions = []

    def initialize_preferences(self, user_id):
        self.preferences[user_id] = {"activities": [], "categories": []}

    def log_user_action(self, action_type, detail):
        # Log actions to adjust recommendations
        if action_type == "selected_activity":
            self.preferences["User123"]["activities"].append(detail)

    def get_recommendations(self):
        # Generate sample recommendations based on preferences
        activities = self.preferences.get("User123", {}).get("activities", [])
        if "museum_tour" in activities:
            self.suggestions.append("Art Museum Tour")
        if "hiking" in activities:
            self.suggestions.append("Mountain Hike")
        return self.suggestions
